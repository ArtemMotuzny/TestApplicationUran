<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center"
        android:text="@string/action"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/dialog_f"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_star_border_black_24px"
        android:text="@string/set_as_favorite"
        android:textColor="@color/grey_BDBDBD" />

    <Button
        android:id="@+id/dialog_l"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_link_black_24px"
        android:text="@string/get_permalink"
        android:textColor="@color/grey_BDBDBD" />

    <Button
        android:id="@+id/dialog_d"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_delete_black_24px"
        android:text="@string/delete"
        android:textColor="@color/grey_BDBDBD" />

</LinearLayout>