<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_list_item_left_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:id="@+id/main_list_item_left_top"
                android:layout_width="10dp"
                android:layout_height="35dp"
                android:background="#000" />

            <View
                android:id="@+id/main_list_item_left_botom"
                android:layout_width="10dp"
                android:layout_height="35dp"
                android:background="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/main_list_item_icon"
            android:layout_toRightOf="@+id/main_list_item_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_list_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                tools:text="Family shared" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modified_text" />

                <TextView
                    android:id="@+id/main_list_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    tools:text="June 2, 2014" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/main_list_item_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            tools:src="@drawable/ic_filter_hdr_black_24px" />

        <LinearLayout
            android:id="@+id/main_list_item_right_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/grey_E0E0E0"
                />
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/grey_BDBDBD"/>
        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>